<mvc:View
    controllerName="app.home.controller.createProduct"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    height="100%"
    busyIndicatorDelay="0"
>
    <tnt:ToolHeader
        id="toolHeader"
        class="sapUiTinyMargin"
    >
        <Title
            id="title"
            textAlign="Center"
            text="Production Order Details"
            wrapping="false"
        />
        <ToolbarSpacer id="_IDGenToolbarSpacer" />
        <Avatar
            id="avatar"
            src="sap-icon://employee"
            displaySize="XS"
            tooltip="Profile"
        />
    </tnt:ToolHeader>

    <l:VerticalLayout id="_IDGenVerticalLayout" width="100%">
        <f:DynamicPage
            id="dynamicPage"
            showFooter="true"
            preserveHeaderStateOnScroll="true"
        >
            <f:content>
                <IconTabBar
                    id="iconTabBar"
                    class="sapUiResponsiveContentPadding"
                >
                    <items>
                        <IconTabFilter
                            id="tabFilter"
                            text="Production Details"
                            icon="sap-icon://header"
                        >
                            <form:SimpleForm id="_IDGenSimpleForm"
                                editable="true"
                                class="sapUiTinyMargin"
                            >
                                 <form:content>
                                <core:Title id="_IDGenTitle21" />
                                <Label
                                    id="_IDLabel2"
                                    text="Material"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                    required="true"
                                />
                                <HBox id="SoldTPBox">
                                    <Input
                                        id="materialInput"
                                        width="200px"
                                        showValueHelp="true"
                                        valueHelpRequest="onMaterialValuehelpClick"
                                        required="true"
                                    />
                                </HBox>
                                <Label
                                    id="_IDLabel4"
                                    text="Production Plant"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                    required="true"
                                />
                                <HBox id="_IDHBox2">
                                    <Input
                                        id="productionplantinput"
                                        showValueHelp="true"
                                        valueHelpRequest="onProductionPlantValueHelp"
                                        width="200px"
                                        class="salesOrgDesc"
                                    />
                                </HBox>
                                <Label
                                    id="_IDGenLabe2l7"
                                    text="Start Date"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <DatePicker
                                    id="DP21"
                                    change="onSelectDate"
                                    width="200px"
                                    ariaLabelledBy=""
                                />
                                <Label
                                    id="_IDGenLabel28"
                                    text="End Date"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <DatePicker
                                    id="DP22"
                                    change="onSelectDate"
                                    width="200px"
                                />

                                <Label
                                    id="_IDLabel5"
                                    text="Production Quantity"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <HBox id="_IDGenHBox42">
                                    <Input
                                        id="division_id"
                                        width="200px"
                                        type="Number"
                                    />
                                </HBox>

                                <core:Title id="_IenTitle2" />
                                <Label
                                    id="orderTypeLabel"
                                    text="Order Type"
                                    design="Bold"
                                    required="true"
                                    class="sapUiTinyMarginTop"
                                />
                                <HBox id="orderTypeHBox">
                                    <Input
                                        id="orderTypeInput"
                                        width="200px"
                                        showValueHelp="true"
                                        valueHelpRequest="onOrderTypeValueHelp"
                                        required="true"
                                    />
                                </HBox>

                                <Label
                                    id="_IDLabel6"
                                    text="Delivery Quantity"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <HBox id="_IDHBox3">
                                    <Input
                                        id="distChan_id"
                                        width="200px"
                                        type="Number"
                                    />
                                </HBox>
                                <Label
                                    id="workCenterLabel"
                                    text="Work Center"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                    required="true"
                                />
                                <HBox id="workCenterHBox">
                                    <Input
                                        id="workCenterInput"
                                        showValueHelp="true"
                                        valueHelpRequest="onWorkCenterValueHelp"
                                        width="200px"
                                        class="workCenterInput"
                                    />
                                </HBox>

                                <Label
                                    id="_IDLabel16"
                                    text="Priority"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <HBox id="_IDGenHBox15">
                                    <Select
                                        id="division_id17"
                                        width="200px"
                                        selectedKey=""
                                    >
                                        <core:Item
                                            id="_IDGenItem1"
                                            key=""
                                            text="--Select--"
                                        />
                                        <core:Item
                                            id="_IDGenItem2"
                                            key="high"
                                            text="High"
                                        />
                                        <core:Item
                                            id="_IDGenItem3"
                                            key="medium"
                                            text="Medium"
                                        />
                                        <core:Item
                                            id="_IDGenItem4"
                                            key="low"
                                            text="Low"
                                        />
                                    </Select>
                                </HBox>

                                <Label
                                    id="_IDnLabel7"
                                    text="Remarks"
                                    design="Bold"
                                    class="sapUiTinyMarginTop"
                                />
                                <HBox id="_IDGenHBox18">
                                    <Input
                                        id="ShipTP_id19"
                                        width="200px"
                                        required="true"
                                    />
                                </HBox>
                            </form:content>

                            </form:SimpleForm>
                        </IconTabFilter>

                         <IconTabFilter
                        id="_IDGenIconTabFilter2"
                        key="itemDetails"
                        text="Confirmation"
                        icon="sap-icon://activity-items"
                        enabled="true"
                    >
                        <form:SimpleForm
                            id="_IDGenSimpleForm2"
                            class="tableBorder sapUiTinyMargin"
                            editable="true"
                        >
                        </form:SimpleForm>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </f:content>
        </f:DynamicPage>
    </l:VerticalLayout>
</mvc:View>
